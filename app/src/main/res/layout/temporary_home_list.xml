<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">





    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_Temporary_addres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12sdp"
        app:layout_constraintTop_toTopOf="parent" >


        <ImageView
            android:id="@+id/ic_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/location_orange"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/drop_1"
            android:textFontWeight="400"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:layout_marginTop="@dimen/_2sdp"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_regular"
            app:layout_constraintStart_toStartOf="@id/ic_location"
            app:layout_constraintEnd_toEndOf="@id/ic_location"
            app:layout_constraintTop_toBottomOf="@id/ic_location"/>



        <ImageView
            android:id="@+id/ic_dotted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_dotted"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_20sdp"
            app:layout_constraintTop_toTopOf="@id/ic_location"
            app:layout_constraintStart_toEndOf="@id/ic_location"/>


        <TextView
            android:id="@+id/txt_temporary_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:text="@string/temporary_home"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginStart="@dimen/_10sdp"
            app:layout_constraintStart_toEndOf="@+id/ic_dotted"
            app:layout_constraintTop_toTopOf="@+id/ic_location" />

        <TextView
            android:id="@+id/txt_Address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:text="@string/j_121_second_floor_block_j_rajouri_garden_new_delhi"
            android:fontFamily="@font/inter_medium"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="@dimen/_8sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/txt_temporary_home"
            app:layout_constraintTop_toBottomOf="@id/txt_temporary_home" />


    </androidx.constraintlayout.widget.ConstraintLayout>







</androidx.constraintlayout.widget.ConstraintLayout>