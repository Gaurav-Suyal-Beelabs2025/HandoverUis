<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Drop_1_Details_Fragment">


    <ImageView
        android:id="@+id/backimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_left"
        android:layout_marginTop="@dimen/_19sdp"
        android:layout_marginStart="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/drop_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:fontFamily="@font/inter_bold"
        android:textColor="@color/black"
        android:text="@string/drop_1_details"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/backimg"
        app:layout_constraintStart_toEndOf="@+id/backimg"
        app:layout_constraintTop_toTopOf="@+id/backimg" />

    <View
        android:id="@+id/viewgroup"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/_12sdp"
        android:background="@color/midium_gre_300"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backimg" />

    <TextView
        android:id="@+id/pick_up_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pick_up_location"
        android:textSize="16sp"
        android:textColor="@color/low_black_colour"
        android:fontFamily="@font/inter_medium"
        android:layout_marginTop="@dimen/_14sdp"
        app:layout_constraintStart_toStartOf="@+id/backimg"
        app:layout_constraintTop_toBottomOf="@+id/viewgroup" />

    <TextView
        android:id="@+id/rajpur_block_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:fontFamily="@font/inter_medium"
        android:text="@string/j_121_second_floor_block_j_rajouri_garden_new_delhi"
        android:textColor="@color/low_grey_colour"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/map_textview"
        app:layout_constraintStart_toStartOf="@+id/pick_up_textview"
        app:layout_constraintTop_toBottomOf="@+id/pick_up_textview" />

    <TextView
        android:id="@+id/map_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_12sdp"
        android:drawablePadding="@dimen/_4sdp"
        android:background="@drawable/map_drawable"
        android:drawableLeft="@drawable/map_img"
        android:paddingHorizontal="@dimen/_9sdp"
        android:paddingVertical="@dimen/_4sdp"
        android:text="@string/map"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/rajpur_block_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pick_up_textview" />

    <View
        android:id="@+id/viewgroup_two"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/midium_gre_300"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rajpur_block_textview" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/const_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/const_drawable"
        android:padding="@dimen/_15sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_13sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewgroup_two" >


        <TextView
            android:id="@+id/droo_of_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/drop_off"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/inter_semibold"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_16sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/noida_sector_textxview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_9sdp"
            android:fontFamily="@font/inter_medium"
            android:text="Noida Sec, 63, Uttar Pradesh- 201301,\nNoida Sec, 63, Uttar Pradesh- 201301"
            android:textColor="@color/low_grey_colour"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/droo_of_textview"
            app:layout_constraintTop_toBottomOf="@+id/droo_of_textview" />

        <TextView
            android:id="@+id/edit_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit"
            android:drawableLeft="@drawable/edit_img"
            android:paddingVertical="@dimen/_7sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:background="@drawable/edit_drawable"
            android:drawablePadding="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/noida_sector_textxview" />


        <TextView
            android:id="@+id/see_on_map_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/edit_drawable"
            android:drawableLeft="@drawable/my_location__1_"
            android:layout_marginEnd="@dimen/_7sdp"
            android:drawablePadding="@dimen/_4sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_7sdp"
            android:text="@string/see_on_map"
            app:layout_constraintEnd_toStartOf="@+id/edit_textview"
            app:layout_constraintTop_toBottomOf="@+id/noida_sector_textxview" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/const_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:background="@drawable/const_drawable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/const_one">


        <ImageView
            android:id="@+id/home_imgview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_contact"
            android:layout_marginStart="@dimen/_15sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/receved_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:text="@string/receiver_details"
            android:textSize="16sp"
            android:textColor="@color/low_black_colour"
            android:fontFamily="@font/inter_semibold"
            app:layout_constraintStart_toEndOf="@+id/home_imgview"
            app:layout_constraintTop_toTopOf="@+id/home_imgview" />

        <TextView
            android:id="@+id/gst_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:fontFamily="@font/inter_medium"
            android:text="@string/eg_name_mobile_no_gst_etc"
            android:textColor="@color/low_grey_colour"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/receved_textview"
            app:layout_constraintTop_toBottomOf="@+id/receved_textview" />

        <ImageView
            android:id="@+id/bcakdown_imgview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_order"
            android:layout_marginEnd="@dimen/_16sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />





    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/const_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:paddingVertical="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:background="@drawable/const_drawable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/const_two">



        <ImageView
            android:id="@+id/hometwo_imgview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/gstlogo"
            android:layout_marginStart="@dimen/_15sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/receved_two_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/receiver_details"
            android:textColor="@color/low_black_colour"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/hometwo_imgview"
            app:layout_constraintTop_toTopOf="@+id/hometwo_imgview" />

        <TextView
            android:id="@+id/gst_two_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="@string/eg_size_quantity_type_etc"
            android:textColor="@color/low_grey_colour"
            android:layout_marginTop="@dimen/_3sdp"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/receved_two_textview"
            app:layout_constraintTop_toBottomOf="@+id/receved_two_textview" />

        <ImageView
            android:id="@+id/bcakdown_two_imgview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_order"
            android:layout_marginEnd="@dimen/_16sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/confirm"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/_23sdp"
        android:paddingVertical="@dimen/_16sdp"
        android:background="@drawable/conform_drawable"
        android:fontFamily="@font/inter_semibold"
        android:layout_marginHorizontal="@dimen/_15sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>