<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">


       <ImageView
           android:id="@+id/ic_location"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/ic_location_gre"
           android:layout_marginTop="@dimen/_12sdp"
           android:layout_marginStart="@dimen/_25sdp"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_1_4_kms"
            android:textFontWeight="500"
            android:textColor="@color/deep_gre_400"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:fontFamily="@font/inter_medium"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintTop_toBottomOf="@id/ic_location"
            app:layout_constraintStart_toStartOf="@id/ic_location"
            app:layout_constraintEnd_toEndOf="@id/ic_location"/>

         <TextView
             android:id="@+id/tv_tech_mahindra"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/tech_mahindra"
             android:textAllCaps="false"
             android:textSize="16sp"
             android:textColor="@color/low_black_colour"
             android:textFontWeight="500"
             android:fontFamily="@font/inter_medium"
             android:layout_marginStart="@dimen/_25sdp"
             app:layout_constraintTop_toTopOf="@id/ic_location"
             app:layout_constraintStart_toEndOf="@id/ic_location"/>

          <TextView
              android:id="@+id/tv_address"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/_2_62a_sector_64_noida_uttar_pradesh"
              android:textFontWeight="400"
              android:textColor="@color/low_grey_colour"
              android:textSize="13sp"
              android:textAllCaps="false"
              android:fontFamily="@font/inter_regular"
              android:layout_marginTop="@dimen/_3sdp"
              app:layout_constraintStart_toStartOf="@id/tv_tech_mahindra"
              app:layout_constraintTop_toBottomOf="@id/tv_tech_mahindra"/>


        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/midium_gre_300"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintTop_toBottomOf="@id/tv_address"
            app:layout_constraintStart_toStartOf="@id/tv_tech_mahindra"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


 </androidx.constraintlayout.widget.ConstraintLayout>