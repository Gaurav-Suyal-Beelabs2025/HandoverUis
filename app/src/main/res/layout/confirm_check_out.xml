<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">


           <TextView
               android:id="@+id/txt_confirm_checkout"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Confirm Check Out"
               android:textAllCaps="false"
               android:textSize="14sp"
               android:textColor="#909090"
               android:fontFamily="@font/space_grotesk_medium"
               android:layout_marginTop="@dimen/_12sdp"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent"/>

           <ImageView
               android:id="@+id/img_checkout"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/checkout"
               android:layout_marginTop="@dimen/_20sdp"
               android:layout_marginStart="@dimen/_15sdp"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/txt_confirm_checkout"/>

             <TextView
                 android:id="@+id/txt_today_total"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="#3D3D3D"
                 android:text="Today Total"
                 android:textSize="16sp"
                 android:textAllCaps="false"
                 android:fontFamily="@font/space_grotesk"
                 android:layout_marginStart="@dimen/_5sdp"
                 app:layout_constraintTop_toTopOf="@id/img_checkout"
                 app:layout_constraintBottom_toBottomOf="@id/img_checkout"
                 app:layout_constraintStart_toEndOf="@id/img_checkout"/>


              <TextView
                  android:id="@+id/txt_time"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="11 : 30 Hour"
                  android:textAllCaps="false"
                  android:textSize="24sp"
                  android:textColor="#3D3D3D"
                  android:layout_marginTop="@dimen/_2sdp"
                  android:fontFamily="@font/space_grotesk_bold"
                  app:layout_constraintTop_toBottomOf="@id/img_checkout"
                  app:layout_constraintStart_toStartOf="@id/img_checkout"/>


             <androidx.constraintlayout.widget.ConstraintLayout
                 android:id="@+id/layout_time"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:backgroundTint="#F6F9FF"
                 android:layout_marginTop="@dimen/_8sdp"
                 app:layout_constraintTop_toBottomOf="@id/txt_time"
                 android:layout_marginHorizontal="@dimen/_15sdp"
                 android:background="@drawable/edit_text_background">


              <TextView
                  android:id="@+id/txt_today_earning"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Todayâ€™s Earning"
                  android:textColor="#717171"
                  android:textSize="14sp"
                  android:textAllCaps="false"
                  android:fontFamily="@font/space_grotesk"
                  android:layout_marginTop="@dimen/_10sdp"
                  android:layout_marginStart="@dimen/_15sdp"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/txt_rupees_130"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:text="130 rupee"
                    android:textSize="16sp"
                    android:textColor="#3D3D3D"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:fontFamily="@font/inter_semibold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="@dimen/_12sdp"
                    app:layout_constraintTop_toBottomOf="@id/txt_today_earning"
                    app:layout_constraintStart_toStartOf="@id/txt_today_earning"/>

                    <View
                        android:id="@+id/view"
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        android:background="#EDEDED"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/txt_today_earning"
                        app:layout_constraintBottom_toBottomOf="@id/txt_rupees_130"/>


                 <TextView
                     android:id="@+id/txt_clockedin_time"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Clocked In Time"
                     android:textColor="#717171"
                     android:textSize="14sp"
                     android:textAllCaps="false"
                     android:fontFamily="@font/space_grotesk"
                     android:layout_marginEnd="@dimen/_20sdp"
                     app:layout_constraintEnd_toEndOf="parent"
                     app:layout_constraintTop_toTopOf="@id/txt_today_earning"/>

                 <TextView
                     android:id="@+id/txt_time2"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textAllCaps="false"
                     android:text="02 : 30 pm"
                     android:textSize="16sp"
                     android:textColor="#3D3D3D"
                     android:layout_marginTop="@dimen/_2sdp"
                     android:fontFamily="@font/inter_semibold"
                     app:layout_constraintTop_toBottomOf="@id/txt_clockedin_time"
                     app:layout_constraintStart_toStartOf="@id/txt_clockedin_time"/>


             </androidx.constraintlayout.widget.ConstraintLayout>

               <TextView
                   android:id="@+id/txt_Add_Notes"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Add Notes (Optional)"
                   android:textColor="#3D3D3D"
                   android:textSize="14sp"
                   android:textAllCaps="false"
                   android:fontFamily="@font/space_grotesk"
                   android:layout_marginTop="@dimen/_18sdp"
                   app:layout_constraintStart_toStartOf="@id/layout_time"
                   app:layout_constraintTop_toBottomOf="@id/layout_time"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_40sdp"
            android:backgroundTint="#F6F9FF"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:background="@drawable/edit_text_background"
            app:layout_constraintTop_toBottomOf="@id/txt_Add_Notes">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/space_grotesk"
                android:hint="Write Note"
                android:layout_marginStart="@dimen/_12sdp"
                android:background="#F6F9FF"
                android:textAllCaps="false"
                android:textColor="#88A9B4"
                android:textColorHint="#88A9B4"
                android:textSize="14sp"
                android:layout_marginEnd="@dimen/_20sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_28sdp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            app:layout_constraintTop_toBottomOf="@id/layout_note">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ED4E61"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:text="Cancle"
                android:gravity="center"
                android:paddingVertical="@dimen/_10sdp"
                android:layout_weight="1"
                android:backgroundTint="#F6F9FF"
                android:background="@drawable/cnacle_button"
                android:fontFamily="@font/space_grotesk_bold"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#3D3D3D"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:text="Confirm"
                android:layout_marginStart="@dimen/_8sdp"
                android:paddingVertical="@dimen/_10sdp"
                android:gravity="center"
                android:layout_weight="1"
                android:backgroundTint="#94FF8B"
                android:background="@drawable/cnacle_button"
                android:fontFamily="@font/space_grotesk_bold"/>



        </LinearLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>