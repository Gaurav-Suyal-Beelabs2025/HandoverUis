<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:background="@drawable/bottomsheet_drawable"
            app:layout_constraintBottom_toBottomOf="parent">



            <ImageView
                android:id="@+id/img_ramesh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_man"
                android:padding="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_15sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rajeev_ranjan"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:textFontWeight="500"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/img_ramesh"
                android:layout_marginStart="@dimen/_9sdp"
                app:layout_constraintTop_toTopOf="@+id/img_ramesh"
                android:fontFamily="@font/inter_medium" />

            <TextView
                android:id="@+id/txt_our_rider"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:fontFamily="@font/inter_regular"
                android:text="@string/our_rider_is_on_the_way_and_reaching_your_shop_to_pick_up_the_order"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textFontWeight="400"
                app:layout_constraintStart_toStartOf="@+id/txt_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_name" />


            <RatingBar
                android:id="@+id/userRating"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:rating="4"
                android:stepSize="1"
                app:layout_constraintStart_toStartOf="@+id/img_ramesh"
                app:layout_constraintTop_toBottomOf="@+id/img_ramesh" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_order_timeline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:background="@drawable/timline_drwble"
                android:paddingVertical="@dimen/_8sdp"
                app:layout_constraintEnd_toEndOf="@id/txt_our_rider"
                app:layout_constraintStart_toStartOf="@+id/img_ramesh"
                app:layout_constraintTop_toBottomOf="@id/userRating">


                <ImageView
                    android:id="@+id/img_irror"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_7sdp"
                    android:src="@drawable/group_33751"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:fontFamily="@font/inter_regular"
                    android:text="@string/orders_will_be_serve_d_as_the_timeline"
                    android:textAllCaps="false"
                    android:textColor="@color/low_grey_colour"
                    android:textSize="14sp"
                    android:textFontWeight="400"
                    app:layout_constraintBottom_toBottomOf="@id/img_irror"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/img_irror"
                    app:layout_constraintTop_toTopOf="@+id/img_irror" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/midium_gre_300"
                android:layout_marginTop="@dimen/_12sdp"
                app:layout_constraintTop_toBottomOf="@id/layout_order_timeline" />




            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_temporary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:itemCount="4"
                android:scrollbars="vertical"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/temporary_addres"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/temporary_home_list"
                app:layout_constraintTop_toBottomOf="@+id/view1"/>



            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/midium_gre_300"
                android:layout_marginTop="@dimen/_19sdp"
                app:layout_constraintTop_toBottomOf="@id/recycler_temporary" />





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_19sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                app:layout_constraintTop_toBottomOf="@id/view2">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingVertical="@dimen/_12sdp"
                    android:background="@drawable/call_rider_drawable"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/call_rider"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/call_ride"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:textColor="@color/low_black_colour"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:gravity="center"
                    android:textFontWeight="600"
                    android:fontFamily="@font/inter_semibold" />


                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:backgroundTint="@color/orange_500"
                    android:layout_weight="1"
                    android:paddingVertical="@dimen/_12sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:background="@drawable/call_rider_drawable">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:tint="@color/white"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:src="@drawable/call_rider"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/call_customer"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:fontFamily="@font/inter_bold" />

                </LinearLayout>


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>